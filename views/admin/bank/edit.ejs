<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs')%> <%- include ('../../partials/sidebar.ejs') %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form ubah bank "<%= bank.name %>"</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT %>" method="POST">
              <div class="card-body">
                
                <div class="form-group">
                  <label for="name">Nama pemilik</label>
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    value="<%= bank.name %>"
                    id="name"
                    placeholder="Masukan nama pemilik"
                    required
                  />
                  <div class="form-group">
                    <label>Nama Bank</label>
                    <select class="form-control select2" style="width: 100%;" name="nameBank" required>
                      <option selected="selected">Pilih bank</option>
                      <option value="BNI" 
                      <% if(bank.nameBank === "BNI") { %>
                        selected
                      <% } %>
                      >
                        BNI
                      </option>
                      <option value="JAGO" 
                      <% if(bank.nameBank === "Jago") { %>
                        selected
                      <% } %>
                      >JAGO</option>
                      <option value="BCA"
                      <% if(bank.nameBank === "BCA") { %>
                        selected
                      <% } %>
                      >BCA</option>
                    </select>
                  </div>
                  <label for="noRekening">Nomer Rekening</label>
                  <input
                    type="number"
                    class="form-control"
                    name="noRekening"
                    value="<%= bank.noRekening%>"
                    id="noRekening"
                    placeholder="Masukan nomer rekening"
                    required
                  />
                </div>
                
                
                
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ('../../partials/footer.ejs') %> <%- include
('../../partials/js.ejs') %>
